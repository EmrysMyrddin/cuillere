{
  "name": "@cuillere/core",
  "version": "0.5.0",
  "main": "lib/index.js",
  "repository": "https://github.com/EmrysMyrddin/cuillere",
  "author": {
    "name": "Valentin COCAUD",
    "email": "v.cocaud@gmail.com",
